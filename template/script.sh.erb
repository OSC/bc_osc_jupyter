#!/usr/bin/env bash
<%-
  require 'pathname'
-%>

echo "Starting main script..."
echo "TTT - $(date)"

#
# Start Jupyter server
#

# Clean the environment
module purge

# Required modules
module load xalt/latest <%= context.cuda_version %>

# Set working directory to notebook root directory
cd "${NOTEBOOK_ROOT}"
echo "MODULE LOAD VERSION"
echo "<%= context.version %>"

# Setup Jupyter environment
# If we choose ascend, we only want to load the app_jupyter module, instead of app_jupyter/$VERSION$ module
<% if context.cluster.match?(/ascend/) -%>
  module load project/ondemand app_jupyter
<% else %>
  module load project/ondemand <%= context.version %>
<% end %>
module list
export JUPYTER_PATH="${PWD}/share/jupyter:${OSC_JUPYTER_PATH}"

echo "TTT - $(date)"

# List available kernels for debugging purposes
set -x
jupyter kernelspec list
{ set +x; } 2>/dev/null
echo "TTT - $(date)"
echo "CONFIG FILE"
echo "${CONFIG_FILE}"

# Launch the Jupyter server
set -x
jupyter <%= context.mode == "1" ? "lab" : "notebook" %> --config="${CONFIG_FILE}"
